}

.tool-card details summary {
  cursor: pointer;
  color: var(--accent);
  list-style: none;
}

.tool-card details summary::-webkit-details-marker {
  display: none;
}

.tool-card details[open] summary {
  margin-bottom: 0.3rem;
}

.tool-name {
  font-weight: 600;
  color: var(--text);
}

.tool-status {
  font-size: 0.7rem;
  color: var(--muted);
  font-style: italic;
}

.tool-call {
  border-left: 3px solid var(--accent);
  background: rgba(247, 185, 85, 0.05);
}

.tool-arguments {
  margin-top: 0.4rem;
}

.tool-arguments pre {
  background: rgba(5, 10, 22, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.06);
  border-radius: 0.25rem;
  padding: 0.4rem;
  font-size: 0.75rem;
  overflow-x: auto;
  color: var(--muted);
}

.tool-card.streaming {
  opacity: 0.9;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-4px); }
  to { opacity: 0.9; transform: translateY(0); }
}

.message.streaming-tools {
  border-color: rgba(247, 185, 85, 0.5);
  background: rgba(247, 185, 85, 0.1);
}

.tool-stack.streaming {
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
}

.thinking-indicator {
  border-top: 1px solid var(--border);
  padding: 0.4rem 0.5rem;
  background: rgba(247, 185, 85, 0.05);
  border-bottom: 1px solid rgba(247, 185, 85, 0.2);
  animation: pulse 2s ease-in-out infinite;
}

.thinking-indicator.hidden {
  display: none;
}

.thinking-content {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.thinking-label {
  font-size: 0.65rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--muted);
  min-width: 3rem;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.thinking-dots {
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.thinking-dots span {
  width: 6px;
  height: 6px;
  background: var(--accent);
  border-radius: 50%;
  animation: thinking-bounce 1.4s infinite ease-in-out both;
}

.thinking-dots span:nth-child(1) {
  animation-delay: -0.32s;
}

.thinking-dots span:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes thinking-bounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1.2);
    opacity: 1;
  }
}

.composer {
  border-top: 1px solid var(--border);
  padding: 0.5rem;
  background: var(--bg-panel);
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: flex-end;
  width: 100%;
}

.composer textarea {
  flex: 1;
  width: 100%;
  border: 1px solid var(--border);
  border-radius: 0.4rem;
  padding: 0.5rem 4.5rem 0.5rem 0.5rem;
  background: var(--bg);
  color: var(--text);
  font-size: 0.9rem;
  resize: none;
  max-height: 8rem;
  line-height: 1.4;
}

.composer textarea:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 2px var(--accent-soft);
}

.composer textarea::placeholder {
  color: var(--muted);
  opacity: 0.6;
}

.send-btn,
.stop-btn {
  position: absolute;
  right: 0.4rem;
  bottom: 0.4rem;
  margin: 0;
  padding: 0.3rem 0.7rem;
  font-size: 0.8rem;
  min-width: 3.5rem;
}

button {
  font-family: inherit;
  font-size: 0.8rem;
  padding: 0.4rem 0.8rem;
  border-radius: 0.4rem;
  border: 1px solid var(--border);
  background: var(--bg-panel);
  color: var(--text);
  cursor: pointer;
  transition: all 0.2s ease;
}

button:hover:not(:disabled) {
  background: var(--bg-panel-alt);
  border-color: var(--accent);
}

button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

button.primary {
  background: var(--accent);
  color: var(--bg);
  border-color: var(--accent);
}

button.primary:hover:not(:disabled) {
  background: var(--accent);
  filter: brightness(1.1);
}

button.ghost {
  background: transparent;
  border-color: transparent;
}

button.ghost:hover:not(:disabled) {
  background: var(--bg-panel-alt);
  border-color: var(--border);
}

button.danger {
  border-color: var(--danger);
  color: var(--danger);
}

button.danger:hover:not(:disabled) {
  background: var(--danger);
  color: var(--text);
}

button.danger:not(:disabled) {
  background: rgba(255, 107, 107, 0.15);
  border-color: var(--danger);
  color: var(--danger);
  font-weight: 600;
}

button.danger:not(:disabled):hover {
  background: var(--danger);
  color: var(--bg);
}

.status-bar {
  height: 40px;
  border-top: 1px solid var(--border);
  background: var(--bg-panel);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.75rem;
  font-size: 0.75rem;
}

.status-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.status-bar .links {
  display: none;
}

.status-meta {
  font-size: 0.7rem;
  color: var(--muted);
}

/* Working indicator */
.working-indicator {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.25rem 0.5rem;
  background: var(--accent-soft);
  border-radius: 0.25rem;
  font-size: 0.75rem;
  color: var(--accent);
  margin-left: 0.5rem;
}

.working-indicator.hidden {
  display: none;
}

.working-indicator::before {
  content: '';
  width: 8px;
  height: 8px;
  background: var(--accent);
  border-radius: 50%;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* Feed banner */
.feed-banner {
  padding: 0.5rem 0.75rem;
  background: var(--accent-soft);
  border-bottom: 1px solid var(--accent);
  color: var(--accent);
  font-size: 0.8rem;
  text-align: center;
  border-radius: 0.25rem;
  margin: 0.25rem;
}

.feed-banner.hidden {
  display: none;
}

.state-name {
  font-weight: 500;
}

.state-meta {
  font-size: 0.65rem;
  color: var(--muted);
  opacity: 0.8;
}

/* Scrollbar styling */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--border);
