@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap');

:root {
  --bg: #05060c;
  --bg-panel: #0b0f18;
  --bg-panel-alt: #0e1423;
  --border: #1b2234;
  --text: #f5f6ff;
  --muted: #9aa3ba;
  --accent: #f7b955;
  --accent-soft: rgba(247, 185, 85, 0.18);
  --danger: #ff6b6b;
  font-family: 'JetBrains Mono', 'Fira Code', SFMono-Regular, Consolas, monospace;
}

* {
  box-sizing: border-box;
}

html,
body {
  height: 100%;
}

body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
  min-height: 100vh;
  overflow: hidden;
}

button,
textarea {
  font-family: inherit;
}

.app-shell {
  display: grid;
  grid-template-columns: 220px 1fr;
  gap: 0;
  padding: 0;
  height: calc(100vh - 40px);
}

.sidebar,
.conversation-panel {
  border: none;
  background: transparent;
  padding: 0;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.sidebar {
  border-right: 1px solid var(--border);
}

.brand {
  display: flex;
  gap: 0.5rem;
  align-items: center;
  padding: 0.75rem 0.75rem 0.5rem;
}

.logo {
  font-size: 1.4rem;
  color: var(--accent);
}

.title {
  display: flex;
  flex-direction: column;
  line-height: 1.2;
}

.subtitle {
  color: var(--muted);
  font-size: 0.65rem;
}

.sidebar-meta {
  padding: 0 0.75rem 0.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border);
}

.state-label {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--muted);
}

.thinking-inline {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.7rem;
}

.sidebar-actions {
  display: flex;
  flex-direction: column;
  padding: 0.5rem 0.75rem;
  gap: 0.35rem;
}

.state-section {
  flex: 1;
  overflow-y: auto;
  padding: 0 0.75rem 0.75rem;
}

.section-head {
  font-size: 0.65rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--muted);
  margin-bottom: 0.25rem;
}

.state-list {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.state-item {
  padding: 0.4rem 0.5rem;
  border-radius: 0.4rem;
  cursor: pointer;
  border: 1px solid transparent;
  background: transparent;
  color: inherit;
  text-align: left;
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.state-item.active {
  background: var(--accent-soft);
  border-color: var(--accent);
  color: var(--accent);
}

.state-item:hover {
  border-color: var(--border);
}

.conversation-panel {
  min-height: 0;
  background: var(--bg-panel-alt);
}

.toggle {
  padding: 0.25rem 0.9rem;
  border-radius: 999px;
  border: 1px solid var(--border);
  background: transparent;
  color: inherit;
  cursor: pointer;
}

.toggle.active {
  background: var(--accent-soft);
  border-color: var(--accent);
  color: var(--accent);
}

.message-feed {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  padding: 0.25rem;
}

.message {
  padding: 0.35rem 0.45rem;
  border-radius: 0.3rem;
  line-height: 1.4;
  border: 1px solid rgba(255, 255, 255, 0.08);
  background: rgba(255, 255, 255, 0.03);
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.message.assistant {
  border-color: rgba(247, 185, 85, 0.35);
  background: rgba(247, 185, 85, 0.08);
}

.message.user {
  border-color: rgba(255, 255, 255, 0.18);
  background: rgba(255, 255, 255, 0.05);
}

.message.tool {
  border-style: dashed;
  font-size: 0.82rem;
  background: rgba(21, 27, 43, 0.4);
}

.message-role {
  font-size: 0.65rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--muted);
  margin-bottom: 0.2rem;
}

.message-body pre {
  background: #050a16;
  border-radius: 0.8rem;
  padding: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.08);
  overflow-x: auto;
}

.tool-card {
  font-size: 0.8rem;
  color: var(--muted);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 0.25rem;
  background: rgba(10, 14, 24, 0.8);
  padding: 0.3rem 0.4rem;
}

.tool-card details summary {
  cursor: pointer;
  color: var(--accent);
  list-style: none;
}

.tool-card details summary::-webkit-details-marker {
  display: none;
}

.tool-group {
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0.3rem;
  background: rgba(5, 8, 14, 0.8);
  margin-top: 0.3rem;
}

.tool-group summary {
  cursor: pointer;
  padding: 0.2rem 0.4rem;
  font-size: 0.75rem;
  color: var(--muted);
  list-style: none;
}

.tool-group summary::-webkit-details-marker {
  display: none;
}

.tool-stack {
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
  padding: 0.3rem 0.4rem 0.4rem;
}

.composer {
  display: flex;
  gap: 0.5rem;
  margin-top: auto;
  border-top: 1px solid var(--border);
  padding: 0.4rem;
}

.composer textarea {
  flex: 1;
  border-radius: 0.3rem;
  padding: 0.4rem 0.6rem;
  border: 1px solid var(--border);
  background: #090d16;
  color: var(--text);
  resize: none;
  min-height: 44px;
  max-height: 160px;
  font-size: 0.9rem;
}

.composer textarea:focus {
  outline: 1px solid var(--accent);
}

.composer-actions {
  display: flex;
  align-items: center;
}

.buttons {
  display: flex;
  gap: 0.4rem;
}

button.primary {
  background: var(--accent);
  color: #050301;
  border: none;
  border-radius: 0.4rem;
  padding: 0.4rem 0.9rem;
  font-weight: 600;
  cursor: pointer;
}

button.ghost {
  background: transparent;
  border: 1px solid var(--border);
  color: inherit;
  border-radius: 0.4rem;
  padding: 0.4rem 0.9rem;
  cursor: pointer;
}

button.ghost:hover {
  border-color: var(--accent);
  color: var(--accent);
}

button.danger {
  border-color: var(--danger);
  color: var(--danger);
}

.muted {
  color: var(--muted);
  font-size: 0.85rem;
}

.status-bar {
  height: 40px;
  border-top: 1px solid var(--border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.75rem;
  color: var(--muted);
  background: rgba(6, 9, 16, 0.9);
  font-size: 0.75rem;
}

.status-info {
  display: flex;
  gap: 0.75rem;
}

.status-meta {
  color: var(--muted);
}

.links {
  font-size: 0.7rem;
}

@media (max-width: 1200px) {
  .app-shell {
    grid-template-columns: 200px 1fr;
    grid-template-rows: 1fr;
  }
}

@media (max-width: 900px) {
  .app-shell {
    grid-template-columns: 1fr;
    height: auto;
    min-height: calc(100vh - 40px);
  }
  .sidebar {
    order: 2;
    max-height: 320px;
    overflow-y: auto;
  }
  body {
    overflow-y: auto;
  }
}

.feed-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--border);
  border-radius: 0.4rem;
  background: rgba(255, 255, 255, 0.03);
  font-size: 0.7rem;
  color: var(--muted);
}

.feed-banner.hidden {
  display: none;
}

.feed-banner button {
  font-size: 0.7rem;
  padding: 0.2rem 0.6rem;
}
.state-name {
  font-weight: 600;
}

.state-meta {
  font-size: 0.7rem;
  color: var(--muted);
}

.sidebar-toggle {
  position: fixed;
  bottom: 48px;
  left: 12px;
  z-index: 400;
  border: 1px solid var(--border);
  background: rgba(5, 6, 12, 0.85);
  padding: 0.25rem;
  border-radius: 999px;
  cursor: pointer;
  transition: background 0.2s ease, opacity 0.2s ease;
}

.sidebar-toggle svg {
  width: 18px;
  height: 18px;
  stroke: var(--text);
}

.sidebar-toggle:hover {
  background: rgba(5, 6, 12, 1);
  opacity: 0.85;
}

body.sidebar-collapsed .sidebar {
  transform: translateX(-260px);
  opacity: 0;
  pointer-events: none;
}

body.sidebar-collapsed .app-shell {
  grid-template-columns: 1fr;
}
