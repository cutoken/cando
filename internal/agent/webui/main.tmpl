    document.addEventListener('DOMContentLoaded', () => {
      if (window.lucide) {
        lucide.createIcons();
      }
    });
  </script>

  <!-- Custom Alert Dialog -->
  <div id="alertDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content alert-dialog">
      <div class="dialog-header">
        <h2 id="alertDialogTitle">Alert</h2>
        <button id="closeAlertDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <p id="alertDialogMessage"></p>
      </div>
      <div class="form-actions">
        <button id="alertDialogOk" class="primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Custom Prompt Dialog -->
  <div id="promptDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content prompt-dialog">
      <div class="dialog-header">
        <h2 id="promptDialogTitle">Input</h2>
        <button id="closePromptDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <p id="promptDialogMessage"></p>
        <input type="text" id="promptDialogInput" class="prompt-input" autocomplete="off">
      </div>
      <div class="form-actions">
        <button id="promptDialogCancel" class="ghost">Cancel</button>
        <button id="promptDialogOk" class="primary">OK</button>
      </div>
    </div>
  </div>

  <!-- Custom Confirm Dialog -->
  <div id="confirmDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content confirm-dialog">
      <div class="dialog-header">
        <h2 id="confirmDialogTitle">Confirm</h2>
        <button id="closeConfirmDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <p id="confirmDialogMessage"></p>
      </div>
      <div class="form-actions">
        <button id="confirmDialogCancel" class="ghost">Cancel</button>
        <button id="confirmDialogOk" class="primary">OK</button>
      </div>
    </div>
  </div>

  <!-- File Explorer Context Menu -->
  <div id="explorerContextMenu" class="context-menu" style="display: none;">
    <button class="context-menu-item" data-action="preview">
      <i data-lucide="eye"></i>
      <span>Preview</span>
    </button>
    <button class="context-menu-item" data-action="rename">
      <i data-lucide="pencil"></i>
      <span>Rename</span>
    </button>
    <div class="context-menu-divider"></div>
    <button class="context-menu-item danger" data-action="delete">
      <i data-lucide="trash-2"></i>
      <span>Delete</span>
    </button>
  </div>
</body>
