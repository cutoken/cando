  </footer>
  -->

  {{template "settings" .}}
  {{template "onboarding" .}}

  <!-- Global Help Dialog -->
  <div id="helpDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content help-dialog">
      <div class="dialog-header">
        <h2>Projects & Chats Guide</h2>
        <button id="closeHelpDialog" class="dialog-close">✕</button>
      </div>
      <div class="dialog-body" id="helpDialogContent"></div>
    </div>
  </div>

  <!-- Chats Dialog -->
  <div id="chatsDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content chats-dialog">
      <div class="dialog-header">
        <h2>Chats</h2>
        <button id="closeChatsDialog" class="dialog-close">✕</button>
      </div>
      <div class="dialog-body">
        <div class="chats-actions">
          <button id="newChatDialogBtn" class="primary">
            <i data-lucide="plus"></i>
            New Chat
          </button>
          <button id="cancelChatsDialog" class="ghost">
            <i data-lucide="x"></i>
            Cancel
          </button>
        </div>

        <div class="current-chat-section">
          <h3>Current Chat</h3>
          <div id="currentChatCard" class="chat-card current">
            <div class="chat-info">
              <div class="chat-name" id="currentChatNameDisplay">—</div>
              <div class="chat-meta">
                <span id="currentChatMessages">0 messages</span>
                <span id="currentChatUpdated">—</span>
              </div>
            </div>
            <div class="chat-actions">
              <button id="clearChatBtn" class="ghost">
                <i data-lucide="trash-2"></i>
                Clear History
              </button>
            </div>
          </div>
        </div>

        <div class="all-chats-section">
          <h3>All Chats</h3>
          <div id="chatListContainer" class="chat-list-grid"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Folder Picker Dialog -->
  <div id="folderPickerDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content folder-browser-dialog">
      <div class="dialog-header">
        <h2>Open Folder</h2>
        <button id="closeFolderPicker" class="dialog-close">✕</button>
      </div>
      <div class="dialog-body">
        <div class="folder-browser">
          <div class="folder-browser-toolbar">
            <div class="breadcrumb" id="folderBreadcrumb"></div>
            <button id="createNewFolderBtn" class="ghost new-folder-btn" title="Create New Folder">
              <i data-lucide="folder-plus"></i>
              <span>New Folder</span>
            </button>
          </div>
          <div class="folder-list" id="folderList">
            <div class="loading">Loading...</div>
          </div>
          <div class="current-selection">
            <label>Current Folder:</label>
            <div id="selectedFolder" class="selected-folder-path">—</div>
          </div>
        </div>
        <div id="folderPickerError" class="error-message" style="display: none;"></div>
      </div>
      <div class="form-actions">
        <button id="cancelFolderPicker" class="ghost">Cancel</button>
        <button id="confirmAddWorkspace" class="primary">Use This Folder</button>
      </div>
    </div>
  </div>

  <!-- New Project Dialog -->
  <div id="newProjectDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content new-project-dialog">
      <div class="dialog-header">
        <h2>New Project</h2>
        <button id="closeNewProjectDialog" class="dialog-close">✕</button>
      </div>
      <div class="dialog-body">
        <div class="form-group">
          <label for="newProjectName">Project Name</label>
          <input type="text" id="newProjectName" placeholder="my-project" autocomplete="off">
        </div>
        <div class="form-group">
          <label>Location</label>
          <div class="location-picker">
            <span id="newProjectPath" class="project-path-display">/home/user/my-project</span>
            <button id="changeProjectLocation" class="ghost">Change</button>
          </div>
        </div>
        <div id="newProjectError" class="error-message" style="display: none;"></div>
      </div>
      <div class="form-actions">
        <button id="cancelNewProject" class="ghost">Cancel</button>
        <button id="confirmNewProject" class="primary">Create Project</button>
      </div>
    </div>
  </div>

  <!-- Project Close Confirmation Dialog -->
  <div id="closeProjectDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content">
      <div class="dialog-header">
        <h2>Close Project</h2>
        <button id="cancelCloseProject" class="dialog-close">✕</button>
      </div>
      <div class="dialog-body">
        <p>Are you sure you want to close project <strong id="closeProjectName">—</strong>?</p>
        <p class="help-text">This will remove it from your project list. Your files and chat history will not be deleted.</p>
        <div class="form-actions">
          <button id="cancelCloseProjectBtn" class="ghost">Cancel</button>
          <button id="confirmCloseProject" class="primary danger">Close Project</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Compaction History Dialog -->
  <div id="compactionDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content">
      <div class="dialog-header">
        <h2>Compaction History</h2>
        <button id="closeCompactionDialog" class="dialog-close">✕</button>
      </div>
      <div id="compactionHistoryContent" class="dialog-body">
        <p>Loading...</p>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.5/dist/purify.min.js" defer></script>
  <script src="/alpine.js" defer></script>
  <script src="/lucide.js"></script>
  <script src="/app.js" defer></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      if (window.lucide) {
        lucide.createIcons();
      }
    });
  </script>
</body>
</html>
