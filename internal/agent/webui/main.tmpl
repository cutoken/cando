          <i data-lucide="chevron-up"></i>
        </button>
        <div id="workspaceMenu" class="workspace-menu" style="display: none;"></div>
      </div>
      <button id="addWorkspaceBtn" class="add-workspace-btn" title="Add workspace">
        <i data-lucide="plus"></i>
      </button>
      <button id="workspaceTabScrollLeft" class="workspace-scroll-btn hidden" title="Scroll left">
        <i data-lucide="chevron-left"></i>
      </button>
      <div id="workspaceTabsContainer" class="workspace-tabs-container">
        <div id="workspaceTabs" class="workspace-tabs"></div>
      </div>
      <button id="workspaceTabScrollRight" class="workspace-scroll-btn hidden" title="Scroll right">
        <i data-lucide="chevron-right"></i>
      </button>
    </div>
    <div class="status-bar-right">
      <button id="helpBtn" class="help-btn" title="Show help">
        <i data-lucide="help-circle"></i>
      </button>
      <div class="status-progress">
        <div class="context-progress-bar" id="contextProgressBar">
          <div class="context-progress-fill" id="contextProgressFill"></div>
        </div>
        <div id="statusMeta" class="status-meta"></div>
      </div>
      <div id="statusText">Ready.</div>
    </div>
  </footer>
  -->

  {{template "settings" .}}
  {{template "onboarding" .}}

  <!-- Global Help Dialog -->
  <div id="helpDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content help-dialog">
      <div class="dialog-header">
        <h2>Quick Guide</h2>
        <button id="closeHelpDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body" id="helpDialogContent"></div>
    </div>
  </div>

  <!-- Chats Dialog -->
  <div id="chatsDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content chats-dialog">
      <div class="dialog-header">
        <h2>Chats</h2>
        <button id="closeChatsDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div class="chats-actions">
          <button id="newChatDialogBtn" class="primary">
            <i data-lucide="plus"></i>
            New Chat
          </button>
          <button id="cancelChatsDialog" class="ghost">
            <i data-lucide="x"></i>
            Cancel
          </button>
        </div>

        <div class="current-chat-section">
          <h3>Current Chat</h3>
          <div id="currentChatCard" class="chat-card current">
            <div class="chat-info">
              <div class="chat-name" id="currentChatNameDisplay">â€”</div>
              <div class="chat-meta">
                <span id="currentChatMessages">0 messages</span>
                <span id="currentChatUpdated">â€”</span>
              </div>
            </div>
            <div class="chat-actions">
              <button id="clearChatBtn" class="ghost">
                <i data-lucide="trash-2"></i>
                Clear History
              </button>
            </div>
          </div>
        </div>

        <div class="all-chats-section">
          <h3>All Chats</h3>
          <div id="chatListContainer" class="chat-list-grid"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Folder Picker Dialog -->
  <div id="folderPickerDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content folder-browser-dialog">
      <div class="dialog-header">
        <h2>Open Folder</h2>
        <button id="closeFolderPicker" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div class="folder-browser">
          <div class="folder-browser-toolbar">
            <div class="breadcrumb" id="folderBreadcrumb"></div>
            <button id="createNewFolderBtn" class="ghost new-folder-btn" title="Create New Folder">
              <i data-lucide="folder-plus"></i>
              <span>New Folder</span>
            </button>
          </div>
          <div class="folder-list" id="folderList">
            <div class="loading">Loading...</div>
          </div>
          <div class="current-selection">
            <label>Current Folder:</label>
            <div id="selectedFolder" class="selected-folder-path">â€”</div>
          </div>
        </div>
        <div id="folderPickerError" class="error-message" style="display: none;"></div>
      </div>
      <div class="form-actions">
        <button id="cancelFolderPicker" class="ghost">Cancel</button>
        <button id="confirmAddWorkspace" class="primary">Use This Folder</button>
      </div>
    </div>
  </div>

  <!-- File Browser Dialog -->
  <div id="fileBrowserDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content file-browser-dialog">
      <div class="dialog-header">
        <h2>Select Files</h2>
        <button id="closeFileBrowser" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div class="file-browser">
          <div class="file-browser-breadcrumb" id="fileBrowserBreadcrumb"></div>
          <div class="file-browser-list" id="fileBrowserList">
            <div class="loading">Loading...</div>
          </div>
          <div class="file-browser-selection">
            <label>Selected:</label>
            <div id="selectedFilesDisplay" class="selected-files">None</div>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <button id="cancelFileBrowser" class="ghost">Cancel</button>
        <button id="confirmFileBrowser" class="primary">Insert Selected</button>
      </div>
    </div>
  </div>

  <!-- New Project Dialog -->
  <div id="newProjectDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content new-project-dialog">
      <div class="dialog-header">
        <h2>New Project</h2>
        <button id="closeNewProjectDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div class="form-group">
          <label for="newProjectName">Project Name</label>
          <input type="text" id="newProjectName" placeholder="my-project" autocomplete="off">
        </div>
        <div class="form-group">
          <label>Location</label>
          <div class="location-picker">
            <span id="newProjectPath" class="project-path-display">/home/user/my-project</span>
            <button id="changeProjectLocation" class="ghost">Change</button>
          </div>
        </div>
        <div id="newProjectError" class="error-message" style="display: none;"></div>
      </div>
      <div class="form-actions">
        <button id="cancelNewProject" class="ghost">Cancel</button>
        <button id="confirmNewProject" class="primary">Create Project</button>
      </div>
    </div>
  </div>

  <!-- Project Close Confirmation Dialog -->
  <div id="closeProjectDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content">
      <div class="dialog-header">
        <h2>Close Project</h2>
        <button id="cancelCloseProject" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <p>Are you sure you want to close project <strong id="closeProjectName">â€”</strong>?</p>
        <p class="help-text">This will remove it from your project list. Your files and chat history will not be deleted.</p>
        <div class="form-actions">
          <button id="cancelCloseProjectBtn" class="ghost">Cancel</button>
          <button id="confirmCloseProject" class="primary danger">Close Project</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Project Settings Dialog -->
  <div id="projectSettingsDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content project-settings-dialog">
      <div class="dialog-header">
        <h2>Project Settings</h2>
        <button id="closeProjectSettings" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div class="tabs">
          <button class="tab-btn active" data-tab="project-instructions">Instructions</button>
          <!-- Future tabs can be added here -->
        </div>

        <div class="tab-content">
          <!-- Instructions Tab -->
          <div id="tab-project-instructions" class="tab-pane active">
            <div class="tab-section">
              <h3>Project Instructions</h3>
              <p class="help-text">These instructions are sent with every message in this project.</p>
              <textarea id="projectInstructionsInput" class="project-instructions-textarea" placeholder="Example: Always use TypeScript. Follow the existing code style. Prefer functional components."></textarea>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <button id="cancelProjectSettings" class="ghost">Cancel</button>
          <button id="saveProjectSettings" class="primary">Save</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Compaction History Dialog -->
  <div id="compactionDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content">
      <div class="dialog-header">
        <h2>Compaction History</h2>
        <button id="closeCompactionDialog" class="dialog-close">âœ•</button>
      </div>
      <div id="compactionHistoryContent" class="dialog-body">
        <p>Loading...</p>
      </div>
    </div>
  </div>

  <!-- Update Available Dialog -->
  <div id="updateDialog" class="dialog-overlay" style="display: none;">
    <div class="dialog-content update-dialog">
      <div class="dialog-header">
        <h2>Update Available</h2>
        <button id="closeUpdateDialog" class="dialog-close">âœ•</button>
      </div>
      <div class="dialog-body">
        <div id="updateCheckPhase" class="update-phase">
          <p class="update-version-info">
            <span>Current: <strong id="updateCurrentVersion">â€”</strong></span>
            <span>Latest: <strong id="updateLatestVersion">â€”</strong></span>
          </p>
          <p class="update-description">A new version of Cando is available. Your session will be preserved.</p>
          <div class="update-actions">
            <button id="updateNowBtn" class="primary">Update Now</button>
            <button id="updateDismissBtn" class="ghost">Go Away Demon</button>
          </div>
        </div>
        <div id="updateDownloadPhase" class="update-phase" style="display: none;">
          <p class="update-status">Downloading update...</p>
          <div class="update-spinner"></div>
        </div>
        <div id="updateReadyPhase" class="update-phase" style="display: none;">
          <p class="update-status">Update downloaded!</p>
          <p class="update-description">Click below to restart with the new version.</p>
          <div class="update-actions">
            <button id="updateRestartBtn" class="primary">Restart Now</button>
          </div>
        </div>
        <div id="updateRestartingPhase" class="update-phase" style="display: none;">
          <p class="update-status">Restarting...</p>
          <div class="update-spinner"></div>
          <p class="update-hint">The page will reload automatically.</p>
          <div class="update-actions">
            <button id="updateRefreshBtn" class="ghost">Refresh Page</button>
          </div>
        </div>
        <div id="updateManualPhase" class="update-phase" style="display: none;">
          <p class="update-status">Manual update required</p>
          <p class="update-description">The binary is not writable. Run this command to update:</p>
          <pre id="updateManualCommand" class="update-command"></pre>
          <div class="update-actions">
            <button id="updateCopyBtn" class="ghost">Copy Command</button>
          </div>
        </div>
        <div id="updateErrorPhase" class="update-phase" style="display: none;">
          <p class="update-status update-error">Update failed</p>
          <p id="updateErrorMessage" class="update-description"></p>
          <div class="update-actions">
            <button id="updateRetryBtn" class="primary">Retry</button>
            <button id="updateCloseErrorBtn" class="ghost">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js" defer></script>
  <script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.5/dist/purify.min.js" defer></script>
