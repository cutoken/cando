<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cando Â· Web</title>
  <link rel="stylesheet" href="/app.css" />
</head>
<body>
  <div class="app-shell">
    <!-- Top Toolbar (full width) -->
    <div class="message-toolbar">
      <!-- Expand Sidebar Button (shown when sidebar collapsed) -->
      <button id="expandSidebarBtn" class="toolbar-icon-btn expand-sidebar-btn hidden" title="Show Explorer">
        <i data-lucide="panel-left-open"></i>
      </button>

      <!-- Project Picker: [ðŸ“ name â–¼] -->
      <div class="project-picker-container">
        <button id="projectPickerBtn" class="project-picker-btn" title="Switch Project">
          <i data-lucide="folder" class="picker-icon"></i>
          <span id="currentProjectName" class="picker-label">No Project</span>
          <i data-lucide="chevron-down" class="chevron"></i>
        </button>
        <!-- Project Dropdown Menu -->
        <div id="projectMenu" class="project-dropdown-menu hidden">
          <div class="project-menu-section">
            <div id="projectMenuList" class="project-menu-items"></div>
          </div>
          <div class="project-menu-section project-menu-actions">
            <button id="newProjectMenuBtn" class="project-menu-action">
              <i data-lucide="folder-plus"></i>
              <span>New Project</span>
            </button>
            <button id="openFolderMenuBtn" class="project-menu-action">
              <i data-lucide="folder-open"></i>
              <span>Open Project</span>
            </button>
          </div>
          <div class="project-menu-section project-menu-settings">
            <button id="projectSettingsMenuBtn" class="project-menu-action">
              <i data-lucide="settings"></i>
              <span>Project Settings</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Chat Controls: [ ðŸ’¬ chat-1 | + | â–¼ ] -->
      <div class="chat-controls-group">
        <!-- Chat view button (switches to chat view) -->
        <button id="chatPickerBtn" class="chat-picker-btn" title="Switch to Chat">
          <i data-lucide="message-circle" class="picker-icon"></i>
          <span id="currentChatLabel" class="picker-label">chat-1</span>
        </button>
        <div class="chat-controls-divider"></div>
        <!-- New chat button -->
        <button id="newChatBtn" class="new-chat-btn" title="New Chat">
          <i data-lucide="plus"></i>
        </button>
        <div class="chat-controls-divider"></div>
        <!-- Chat dropdown button -->
        <div class="chat-dropdown-container">
          <button id="chatDropdownBtn" class="chat-dropdown-btn" title="Switch Chat">
            <i data-lucide="chevron-down"></i>
          </button>
          <div id="chatMenu" class="chat-dropdown-menu hidden">
            <div id="chatMenuList" class="chat-menu-items"></div>
          </div>
        </div>
      </div>

      <!-- Editor Tabs (inline in toolbar) -->
      <div id="editorTabsSection" class="editor-tabs-section hidden">
        <div class="toolbar-divider"></div>
        <div id="editorTabs" class="editor-tabs"></div>
        <div id="editorTabsOverflow" class="editor-tabs-overflow hidden">
          <button class="icon-btn-sm" title="More tabs">
            <i data-lucide="chevron-down"></i>
          </button>
          <div class="overflow-menu hidden"></div>
        </div>
      </div>

      <!-- Plan Mode Toggle (right side, separate section) -->
      <div class="toolbar-toggles">
        <button id="planModeBtn" class="pane-toggle-btn" title="Plan Mode (analyze only, no file changes)">
          <i data-lucide="clipboard-list"></i>
        </button>
        <button id="bellToggleBtn" class="pane-toggle-btn active" title="Bell enabled (plays sound when task completes)">
          <i data-lucide="bell"></i>
        </button>
      </div>

      <div class="toolbar-divider"></div>

      <!-- Pane Toggle Buttons (right side) -->
      <div class="pane-toggles">
        <button id="toggleChatBtn" class="pane-toggle-btn active" title="Toggle Chat">
          <i data-lucide="message-circle"></i>
        </button>
        <button id="toggleEditorBtn" class="pane-toggle-btn" title="Toggle Editor">
          <i data-lucide="code"></i>
        </button>
        <button id="togglePreviewBtn" class="pane-toggle-btn" title="Toggle Preview">
          <i data-lucide="eye"></i>
        </button>
      </div>
    </div>

    <div class="main-layout">
      <!-- File Explorer Sidebar -->
      <aside id="fileSidebar" class="file-sidebar">
        <button id="collapseSidebarBtn" class="sidebar-collapse-btn" title="Collapse Explorer">
          <i data-lucide="panel-left-close"></i>
        </button>
        <div class="explorer-toolbar">
          <button id="newFileBtn" class="explorer-toolbar-btn" title="New File">
            <i data-lucide="file-plus-2"></i>
          </button>
          <button id="newFolderBtn" class="explorer-toolbar-btn" title="New Folder">
            <i data-lucide="folder-plus"></i>
          </button>
          <button id="revealInExplorerBtn" class="explorer-toolbar-btn" title="Open in File Explorer">
            <i data-lucide="external-link"></i>
          </button>
        </div>
        <div id="fileTree" class="file-tree"></div>
      </aside>

      <!-- Sidebar Resize Handle -->
      <div id="sidebarResizeHandle" class="sidebar-resize-handle"></div>

      <!-- Main Content Area -->
      <div class="content-area">
        <!-- Conversation Panel (includes editor when files open) -->
        {{template "chat" .}}
      </div>

      <!-- Preview Panel Resize Handle -->
      <div id="previewResizeHandle" class="preview-resize-handle hidden"></div>

      <!-- Preview Panel (right side, hidden by default) -->
      <aside id="previewPanel" class="preview-panel hidden">
        <div class="preview-header">
          <span id="previewTitle" class="preview-title">Preview</span>
          <div class="preview-actions">
            <button id="previewOpenNewTab" class="icon-btn-sm" title="Open in New Tab">
              <i data-lucide="external-link"></i>
            </button>
            <button id="previewFullscreenBtn" class="icon-btn-sm" title="Fullscreen">
              <i data-lucide="maximize"></i>
            </button>
            <button id="previewCloseBtn" class="icon-btn-sm" title="Close Preview">
              <i data-lucide="x"></i>
            </button>
          </div>
        </div>
        <div class="preview-content">
          <div id="previewEmpty" class="preview-empty">
            <i data-lucide="eye-off"></i>
            <p>No preview available</p>
            <span>Ask the agent to create visual content like HTML pages, images, or diagrams</span>
          </div>
          <iframe id="previewFrame" class="preview-frame hidden" sandbox="allow-scripts allow-same-origin allow-forms allow-modals allow-popups allow-downloads"></iframe>
        </div>
      </aside>
    </div>

    <!-- Composer (full width at bottom) -->
    <form id="promptForm" class="composer">
      <div class="input-wrapper">
        <button type="button" id="helpBtn" class="icon-btn help-btn" title="Help">
          <i data-lucide="help-circle"></i>
        </button>
        <button type="button" id="settingsBtn" class="icon-btn settings-btn" title="Settings">
          <i data-lucide="settings"></i>
        </button>
        <textarea id="promptInput" placeholder="Ask Cando anythingâ€¦ (Enter to send, Shift+Enter for new line)" rows="1"></textarea>
        <button type="button" id="attachBtn" class="icon-btn attach-btn" title="Attach files">
          <i data-lucide="paperclip"></i>
        </button>
        <input type="file" id="fileInput" multiple style="display: none;" />
        <button type="button" id="cancelBtn" class="ghost stop-btn">Cancel</button>
        <button type="submit" id="sendBtn" class="primary send-btn">Send</button>
      </div>
    </form>
  </div>

